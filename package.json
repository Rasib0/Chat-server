{
  "name": "socket-chat-example",
  "version": "0.0.1",
  "description": "my first socket.io app",
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^7.4.1",
    "socket.io": "^4.5.4"
  },
  "devDependencies": {
    "@fsouza/prettierd": "^0.24.2",
    "browser-sync": "^2.29.3",
    "concurrently": "^8.2.0",
    "nodemon": "^3.0.1",
    "tailwindcss": "^3.3.3"
  },
  "scripts": {
    "start": "concurrently \"npm run watch:css\" \"npm run watch:server\" \"npm run browser-sync\"",
    "watch:server": "nodemon server.js",
    "watch:css": "npx tailwindcss -i ./public/styles/tailwind.css -o ./public/styles/output.css -w",
    "browser-sync": "browser-sync start --no-notify --proxy 'localhost:5000' --files 'public/*.html, public/styles/output.css' "
  }
}
